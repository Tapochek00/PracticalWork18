<Window x:Class="PracticalWork18.Delete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticalWork18"
        mc:Ignorable="d"
        Title="Найти и изменить" Height="240" Width="400" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Margin="0, 20, 0, 0">Искать по:</TextBlock>
            <ComboBox x:Name="setSearch" Margin="0, 10, 0, 0" Width="120">
                <ComboBoxItem IsSelected="True">ФИО</ComboBoxItem>
                <ComboBoxItem>Группа</ComboBoxItem>
            </ComboBox>

            <TextBlock HorizontalAlignment="Center" Margin="0, 20, 0, 10">Введите запрос</TextBlock>
            <TextBox x:Name="searchText" VerticalAlignment="Top" HorizontalAlignment="Center" Width="160"></TextBox>

            <Button x:Name="Search" IsDefault="True" HorizontalAlignment="Center" Margin="0, 20, 0, 0" Content="Найти и удалить" Padding="5" Width="180" Click="Search_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
